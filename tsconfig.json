{
    "typedocOptions": {
        "entryPoints": [
            "./popclip.d.ts"
        ],
        "name": "PopClip Extensions JavaScript Reference",
        "out": "./docs",
        "disableSources": false,
        "sort": [
            "alphabetical"
        ],
        "excludeExternals": true,
        "readme": "README-js.md",
        "excludeNotDocumented": true
    },
    "compilerOptions": {
        "strictNullChecks": true,
        // target es2017 is compatible with macOS 10.13
        // once support for High Sierra is dropped this can be lifted
        // (example: generators)
        "target": "es2017",
        "lib": [
            "es2015"
        ],
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "./popclip.d.ts",
        "./lib",
        "./source"        
    ],
    "ts-standard": {
        "ignore": [
            "**/*.js"
        ]
    }
}